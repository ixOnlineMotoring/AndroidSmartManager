<?xml version="1.0" encoding="utf-8"?>
<!-- sliding -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_drawer"
    android:layout_width="@dimen/navigation_drawer_width"
    android:layout_height="match_parent"
    android:background="#27292E"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/main_menu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvSubMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMainMenu"
        android:background="@color/bar_color"
        android:paddingBottom="08dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="08dp"
        android:text="@string/home"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/lstSlideMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvSubMenu"
        android:divider="#555555"
        android:dividerHeight="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible" />

</RelativeLayout>