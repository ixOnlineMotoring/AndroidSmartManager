<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/llmessage"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <com.nw.widget.CustomTextView
            android:id="@+id/tvBiderName"
            style="@style/SingleLineWhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gary Mackay"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lllowerLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <com.nw.widget.CustomTextView
                android:id="@+id/tvBidPerson"
                style="@style/WhiteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dave Johnson"
                android:textSize="9dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#ffffff" />

            <com.nw.widget.CustomTextView
                android:id="@+id/tvBidDateTime"
                style="@style/WhiteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 Sept 2015 18:33"
                android:textSize="9dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <com.nw.widget.CustomCheckBox
        android:id="@+id/chkBidResponse"
        style="@style/CheckboxStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:gravity="center_horizontal" />

    <com.nw.widget.CustomTextView
        android:id="@+id/tvBidPrice"
        style="@style/SingleLinePurpleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/chkBidResponse"
        android:text="R200 000" />

</RelativeLayout>