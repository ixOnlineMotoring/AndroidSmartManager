<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical" >

            <com.nw.widget.CustomTextView
                android:id="@+id/tvVehicleNameYear"
                style="@style/SingleLineWhiteText"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <com.nw.widget.CustomTextView
                    android:id="@+id/tvRegistration"
                    style="@style/SingleLineWhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />

                <com.nw.widget.CustomTextView
                    android:visibility="gone"
                    android:id="@+id/tvVehicleColour"
                    style="@style/SingleLineWhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />

                <com.nw.widget.CustomTextView
                    android:id="@+id/tvLocation"
                    android:visibility="gone"
                    style="@style/SingleLineWhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <com.nw.widget.CustomTextView
                    android:id="@+id/tvDepartment"
                    style="@style/SingleLineWhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="#ffffff" />

                <com.nw.widget.CustomTextView
                    android:id="@+id/tvVehicleMileage"
                    style="@style/SingleLineWhiteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_weight="1.0"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="#ffffff" />

                <com.nw.widget.CustomTextView
                    android:id="@+id/tvAge"
                    style="@style/SingleLineWhiteText"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <com.nw.widget.CustomTextView
                    style="@style/SingleLineWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ret. "
                    android:textSize="9dp"
                    android:textStyle="bold" />

                <com.nw.widget.CustomTextView
                    android:id="@+id/tvAskingPrice"
                    style="@style/SingleLineGreenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Price" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />

                <com.nw.widget.CustomTextView
                    style="@style/SingleLineWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Trd. "
                    android:textSize="9dp"
                    android:textStyle="bold" />

                <com.nw.widget.CustomTextView
                    android:id="@+id/tvtradeprice"
                    style="@style/SingleLineYellowText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="R0000" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff" />

                <com.nw.widget.CustomTextView
                    style="@style/SingleLineWhiteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Bid. "
                    android:textSize="9dp"
                    android:textStyle="bold" />

                <com.nw.widget.CustomTextView
                    android:id="@+id/tvBidPrice"
                    style="@style/SingleLinePurpleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.0"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </TableRow>

</LinearLayout>