<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.nw.widget.CustomButton
            android:id="@+id/btnScanLicense"
            style="@style/BlueButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/scan_driver_license"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="1.0">

            <com.nw.widget.CustomTextViewLight
                style="@style/Seller_page_text_view"
                android:text="Name"/>

            <com.nw.widget.CustomEditText
                android:id="@+id/edSellerName"
                style="@style/Seller_page_Edtext_view"
               />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="1.0">

            <com.nw.widget.CustomTextViewLight
                style="@style/Seller_page_text_view"
                android:text="Surname"/>

            <com.nw.widget.CustomEditText
                android:id="@+id/edSellerSurname"
                style="@style/Seller_page_Edtext_view"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="1.0">

            <com.nw.widget.CustomTextViewLight
                style="@style/Seller_page_text_view"
                android:text="Company"/>

            <com.nw.widget.CustomEditText
                android:id="@+id/edCompany"
                style="@style/Seller_page_Edtext_view"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="1.0">

            <com.nw.widget.CustomTextViewLight
                style="@style/Seller_page_text_view"
                android:text="ID"/>

            <com.nw.widget.CustomEditText
                android:id="@+id/edSellerID"
                style="@style/Seller_page_Edtext_view"/>
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <com.nw.widget.CustomTextViewLight
                        style="@style/SingleLineWhiteTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Age"/>

                    <com.nw.widget.CustomTextViewLight
                        android:id="@+id/tvAge"
                        style="@style/SingleLineWhiteTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:paddingLeft="3dp"
                        android:text=""/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <com.nw.widget.CustomTextViewLight
                        style="@style/SingleLineWhiteTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Gender"/>

                    <com.nw.widget.CustomTextViewLight
                        android:id="@+id/tvGender"
                        style="@style/SingleLineWhiteTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:paddingLeft="3dp"
                        android:text=""/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <com.nw.widget.CustomTextViewLight
                        style="@style/SingleLineWhiteTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="D.O.B"/>

                    <com.nw.widget.CustomTextViewLight
                        android:id="@+id/tvDob"
                        style="@style/SingleLineWhiteTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:paddingLeft="3dp"
                        android:text=""/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <com.nw.widget.CustomTextViewLight
                        style="@style/SingleLineWhiteTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Driver&apos;s Licence/s"/>

                    <com.nw.widget.CustomTextViewLight
                        android:id="@+id/tvRestrictions"
                        style="@style/SingleLineWhiteTextSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:paddingLeft="3dp"
                        android:text=""/>
                </TableRow>
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="0.8">

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/ivUserPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1.0">

            <com.nw.widget.CustomTextViewLight
                style="@style/Seller_page_text_view"
                android:text="@string/email_stock"/>

            <com.nw.widget.CustomEditText
                android:id="@+id/etEmail"
                style="@style/Seller_page_Edtext_view"
                android:inputType="textEmailAddress"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="1.0">

            <com.nw.widget.CustomTextViewLight
                style="@style/Seller_page_text_view"
                android:text="Mobile"/>

            <com.nw.widget.CustomEditText
                android:id="@+id/etMobile"
                style="@style/Seller_page_Edtext_view"
                android:inputType="number"
                android:maxLength="10"/>
        </TableRow>

        <com.nw.widget.CustomTextViewLight
            style="@style/SingleLineWhiteTextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Street Address"/>

        <com.nw.widget.CustomEditText
            android:id="@+id/etStreetAddress"
            style="@style/MultilineEdittextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>

        <com.nw.widget.CustomButton
            android:id="@+id/btnSend"
            style="@style/BlueButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/save"/>
    </LinearLayout>

</ScrollView>