<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.nw.widget.CustomTextView
        android:id="@+id/tvBack"
        style="@style/SingleLineWhiteTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/left_arrow"
        android:gravity="center_vertical"
        android:text="Back" />

    <com.nw.widget.CustomTextView
        android:id="@+id/tvScreenTitle"
        style="@style/SingleLineWhiteTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal"
        android:text="eBrochurea"
        android:textSize="16sp" />

    <com.nw.widget.CustomTextView
        android:id="@+id/tvShare"
        style="@style/SingleLineWhiteTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvScreenTitle"
        android:layout_alignBottom="@+id/tvScreenTitle"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvSeeAll"
        android:gravity="center_vertical" />

    <com.nw.widget.CustomTextView
        android:id="@+id/tvSeeAll"
        style="@style/SingleLineWhiteTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:text="See All  " />

</RelativeLayout>