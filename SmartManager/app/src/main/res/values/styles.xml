<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- parent="@android:style/Widget.Holo.Light.ActionBar" -->
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/bar_color</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="CropTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton"/>

    <style name="EditTextStyleblack" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:background">@drawable/custom_background_edittext</item>
    </style>

    <style name="CheckboxStyle" parent="android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/selector_checkbox_create_blog</item>
    </style>

    <style name="SingleLineEdittextStyle" parent="@style/EditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

      <style name="MultilineEdittextStyle" parent="@style/EditTextStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">text|textNoSuggestions|textMultiLine|textCapSentences</item>
        <item name="android:lines">3</item>
        <item name="android:maxLines">6</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="CustomMultilineEdittextStyle" parent="@style/EditTextStyle">
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">text|textNoSuggestions|textMultiLine|textCapSentences</item>
        <item name="android:lines">8</item>
        <item name="android:maxLines">6</item>
        <item name="android:gravity">top|left</item>
    </style>


    <style name="EditTextStyleDropdown" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_background_edittext</item>
        <item name="android:drawableRight">@drawable/register_arrow</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">text|textNoSuggestions|textCapSentences</item>
    </style>

    <style name="EditTextStyleDropdownDialog" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_background_edittext_dialog</item>
        <item name="android:drawableRight">@drawable/register_arrow</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:padding">7dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">text|textNoSuggestions|textCapSentences</item>
    </style>

    <style name="CalendarEdittext" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/custom_background_edittext</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:padding">7dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:drawableLeft">@drawable/calicons</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_background_edittext_search</item>
        <item name="android:padding">7dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="GreyButtonStyle" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rectangle_dark_gray</item>
        <item name="android:gravity">center|clip_horizontal</item>
        <item name="android:textSize">18sp</item>
